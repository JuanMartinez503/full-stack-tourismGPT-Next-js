generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}
  

model Tour {
  id String @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  city String
  country String
  title String
  description String // stores large amount of data
  image String?
  stops Json
  @@unique([city,country])
}

model Token {
  clerkId String @id @map("_id")
  tokens Int @default (2000)
}